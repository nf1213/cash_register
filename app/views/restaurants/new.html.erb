<div class="row">
  <div class="columns small-12">
    <h1>Welcome! Create Your Restaurant!</h1>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name, label: "Restaurant Name" %>
        <%= f.input :password %>
        <%= f.input :password_confirmation, label: "Confirm" %>
        <%= f.button :submit, "Create Restaurant", class: "expand" %>
      <% end %>
  </div>
</div>
