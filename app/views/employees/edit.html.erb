<%= form_for @employee do |f| %>

  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :salary, "Salary $" %>
    <%= f.number_field :salary, value: "#{sprintf('%.2f', (@employee.salary / 100.00))}", :step => 0.25 %>
  </div>

  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, ["Manager", "Employee"] %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
