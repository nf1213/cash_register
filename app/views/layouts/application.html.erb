<!DOCTYPE html>
<html>
<head>
  <title>CashRegister</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if Restaurant.count > 0 %>
  <h1><%= Restaurant.first.name %></h1>
<% end %>

<%- flash.each do |key, value| -%>
  <div class="flash flash-<%= key %>">
    <%= value %>
  </div>
<%- end -%>

<%= yield %>

<%= javascript_include_tag 'application' %>
<%= javascript_tag do %>
$(function(){
  $(document).foundation();
});
<% end %>
<%= yield :extra_footer %>

</body>
</html>
