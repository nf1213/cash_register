<!DOCTYPE html>
<html>
<head>
  <title>CashRegister</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <% if Restaurant.count > 0 %>
        <h1>
          <%= link_to Restaurant.first.name, root_path %>
        </h1>
      <% end %>
    </li>
  </ul>
  <section class="top-bar-section">
    <ul class="right">
      <li class="divider"></li>
      <li class="has-dropdown not-click">
        <a href="#">
          <% if current_employee %>
            <% if current_employee.current_shift %>
              <% clocked_in = "Clocked in" %>
            <% else %>
              <% clocked_in = "Not clocked in" %>
            <% end %>
            <%= "Signed in as #{current_employee.name}, #{clocked_in}" %>
          <% end %>
        </a>
        <ul class="dropdown">
          <li><%= link_to "Clock In/Out", employees_clock_in_out_path %></li>
          <li><%= link_to "Sign Out", employees_sign_out_path %></li>
        </ul>
      </li>
      <% if current_employee.status == "Manager" %>
        <li class="divider"></li>
        <li><%= link_to "Manager Functions", static_pages_manager_functions_path %></li>
      <% end %>
    </ul>
  </section>
</nav>

<%- flash.each do |key, value| -%>
  <div class="alert-box success">
    <%= value %>
  </div>
<%- end -%>

<%= yield %>

<%= javascript_include_tag 'application' %>
<%= javascript_tag do %>
$(function(){
  $(document).foundation();
});
<% end %>
<%= yield :extra_footer %>

</body>
</html>
