<div class="row">
  <div id="buttons" class="columns small-8">
    <% @items.each do |item| %>
      <%= form_for(:sale_item, url: sale_items_path) do |f| %>
        <%= f.hidden_field :item_id, value: item.id %>
        <%= f.submit "#{item.name}", id: "item" %>
      <% end %>
    <% end %>
  </div>

  <div id="sale-items">
    <% @sale.sale_items.each do |s_item| %>
      <% price = s_item.item.price / 100.00 %>
      <div id="sale-item" class="columns small-2"><%= s_item.item.name %></div>
      <div id="sale-price" class="columns small-2 tab"><%= "#{sprintf('$%.2f', price)}" %></div><br>
    <% end %>
    <% total_price = @sale.total / 100.00 %>
    <div id="sale-item" class="column small-2">Total:</div>
    <div id="sale-price" class="columns small-2 tab"><%= "#{sprintf('$%.2f', total_price)}" %></div><br>
    <div id="sale-item" class="columns small-2"><%= button_to "Cash Out", sale_path(@sale), method: :patch, id: 'cash_out' %></div>
    <div id="hidden_total"><%= @sale.total %></div>
  </div>
</div>

<div class="row">
  <div id="footer">
    <% if current_employee.status == "Manager" %>
      <br><%= link_to "Manager Functions", static_pages_manager_functions_path %>
      <br><a href="#" id="cash_out">CASH OUT TESTING</a>
    <% end %>

    <%= button_to "Sign Out", employees_sign_out_path %>
  </div>
</div>
